<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pia_bg2" >

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[System Configuration]"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:id="@+id/textView_title_settings" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Version"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_version" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_version_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_version_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Screen Lock"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_screenlock" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_screenlock_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_screenlock_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Auto-Lock Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_autolocktime" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_autolocktime_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_autolocktime_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Third-Party App"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_thirdparty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_thirdparty_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_thirdparty_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wi-Fi Setting"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_wifi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_wifi_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_wifi_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Encrypt Phone"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_encrypt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_encrypt_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_encrypt_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disable Camera"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_camera_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_camera_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cookie Setting"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_cookie" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView_cookie_result" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="FIX"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/button_cookie_fix" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#00000000"
                    android:id="@+id/button9" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         The drawer is given a fixed width in dp and extends the full height of
         the container. A solid background is used for contrast
         with the content view. -->
    <ListView
        android:id="@+id/listview_left"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFFFBB"/>

</android.support.v4.widget.DrawerLayout>